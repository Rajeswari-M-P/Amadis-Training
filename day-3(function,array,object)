//OBJECT CREATION 
const person = {
    name: "John",
    age: 30,
    city: "New York"
};

//ACCESSING OBJECT PARAMETERS
//DOT NOTATION
console.log(person.name);  

//BRACKET NOTATION
console.log(person["age"]);  

delete person.city;

console.log(person);


//this keyword
/*const person = {
    name: "John",
    age: 30,
    city: "New York",
    greet: function() {
        return "Hello, my name is " + this.name;
    }
};

console.log(person.greet()); */ 

//OBJECT.KEYS()

const keys = Object.keys(person);
console.log(keys);  

//OBJECT.VALUES()
const values = Object.values(person);
console.log(values);  

//OBJECT.ENTRIES
const entries = Object.entries(person);
console.log(entries);  

//OBJECT.ASSIGN()
const target = {};
const source = {a: 1, b: 2};
Object.assign(target, source);
console.log(target);  

//OBJECT.FREEZE
const obj = {name: "John"};
Object.freeze(obj);
obj.name = "Jane";  
console.log(obj.name);



//ARRAY CREATION
const fruits = ["Apple", "Banana", "Cherry"];

//ARRAY METHODS
//PUSH()
fruits.push("Date");
console.log(fruits); 

//POP()
const lastFruit = fruits.pop();
console.log(lastFruit);  
console.log(fruits);     

//SHIFT()
const firstFruit = fruits.shift();
console.log(firstFruit); 
console.log(fruits);      


//UNSHIFT()
fruits.unshift("Elderberry");
console.log(fruits);  


//CONCAT()
const moreFruits = ["Fig", "Grape"];
const allFruits = fruits.concat(moreFruits);
console.log(allFruits);  

//SLICE
const someFruits = fruits.slice(1, 3);
console.log(someFruits);  

//SORT()
fruits.sort();
console.log(fruits);  

//REVERSE()
fruits.reverse();
console.log(fruits);  

//JOIN()
const fruitString = fruits.join("1");
console.log(fruitString);  


//FUNCTION
function sayHello() {
    console.log("Hello!");
}

sayHello();  

//ARROW FUNCTION
const sayHello1 = () => {
    console.log("Hello!");
};

sayHello();  

//Function with Parameters
function greet(name, age) {
    console.log("Hello, my name is " + name + " and I am " + age + " years old.");
}

greet("Alice", 25);  //function with args
greet("Bob", 30);   


//Rest Parameters
function sum(...numbers) {
    return numbers.reduce((total, num) => total + num, 0);
}

console.log(sum(1, 2, 3));       
console.log(sum(4, 5, 6, 7));    



//RETURN STATEMENT
function add(a, b) {
    return a + b;
}

const result = add(5, 3);
console.log(result);  


//ANONYMOUS FUNCTION

const add2 = function(a, b) {
    return a + b;
};

console.log(add(11, 3));  


setTimeout(function() {
    console.log("This message is displayed after 2 seconds");
}, 2000);
